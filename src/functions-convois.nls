;; Convois Cognition ;;
;;;;;;;;;;;;;;;;;;;;;;;

to split-convoi [ id ] ; id = cars / 2
  
  let new-leader convoi id
  
  ask new-leader [
    set leader? true
    ; set color orange
    set color blue
    set astar-longpath not astar-longpath
    
    ; unlink
  ]
  ; affichage de astar
  astar-affichage ([[patch-at 0 0 (pzcor * -1)] of patch-here] of new-leader) (one-of patches with [objectif?])
end

to split
  split-convoi nb-cars / 2
end